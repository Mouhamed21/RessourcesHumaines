{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'),
    'attr': {'class': 'fos_user_registration_register'}}) }}



<div class="register-box">
    <div class="register-logo">
        <a href="../../index2.html"><b>Admin</b>LTE</a>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>

            <div class="form-group has-feedback">
                <div class="form-group" >
                    <label>Email</label>
                   <div>{{ form_widget(form.email) }}</div>
                </div>

            </div>
            <div class="form-group has-feedback">
                <div class="form-group">
                    <label>Nom Utilisateur</label>
                   <div>{{ form_widget(form.username) }}</div>
                </div>

            </div>

            <div class="form-group has-feedback">
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, "Mot de passe") }}
                   <div>{{ form_widget(form.plainPassword.first) }}</div>
                </div>

            </div>
            <div class="form-group has-feedback">
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, "Retaper le mot de passe") }}
                   <div>{{ form_widget(form.plainPassword.second) }}</div>
                </div>

            </div>
        <div class="form-group has-feedback">
            <div class="form-group" >
                <label>Matricule</label>
                <div>{{ form_widget(form.matricule) }}</div>
            </div>

        </div>

            <div class="row">
                <!-- /.col -->
                <div class="col-xs-6">
                    <input type="submit" class="btn btn-primary btn-block" value="{{ 'registration.submit'|trans }}" />
                </div>
                <!-- /.col -->
            </div>


        {{ form_end(form) }}

        <a href="{{ path('fos_user_security_login') }}" class="text-center">Page de Connexion</a>
    </div>
    <!-- /.form-box -->
</div>


