{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'action/inc/sidebare.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Formations
            <small>Elaboration du plan de Formation</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-edit"></i>Formations</a></li>
            <li class="active">Elaboration du plan de Formation</li>
        </ol>
    </section>
{% endblock %}
{% block body %}
<section class="content">
<div class="text-center">
    <h1>Action</h1>
</div>
<div class="col-xs-12" >
            {% for success_message in app.session.flashbag.get('message6') %}
                <div class="alert alert-success alert-dismissible" style="margin-top: 10px">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-check"></i>{{ success_message }}</h4>
                </div>
            {% endfor %}
            {% for success_message in app.session.flashbag.get('message3') %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> {{ success_message }}</h4>
                </div>
            {% endfor %}
     <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="box-title">Détails de l'action {{ action.nomAction }}</h4>
                </div>
               
                <!-- /.box-header -->
                <div class="box-body">
                        <p class="row">
                            <p class="col-lg-12 col-xs-12">
                            <p class="list-group">
                            <P class="list-group-item"><b>Nom </b> : {{ action.nomAction }}</P>
                            <P class="list-group-item"><b>Cout </b> : {{ action.coutAction }}</P>
                            <P>
                                <a title="Retour" href="{{ path('formation_show', { 'id': formation.idfor }) }}" class="btn btn-facebook">
                                <span class="glyphicon glyphicon-arrow-left"></a>
                                <a title="Modifier" href="{{ path('action_edit', { 'id': action.id }) }}" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span></a>
                                 <button title="Supprimer" type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal{{ action.id }}">
                                     <span class="glyphicon glyphicon-trash"></span>
                                </button>
                            </P>
                            </p>
                            </p></p>
                </div>

                 <div class="modal fade" id="myModal{{ action.id }}" tabindex="-1" role="dialog"       aria-labelledby="myModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Confirmation de Suppression</h4>
                                </div>
                                <div class="modal-body">
                                    <p class="modal-title" id="myModalLabel">Voulez-vous Supprimer {{ action.nomAction }} </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>
                                    {{ form_start(delete_form) }}
                                        <input type="submit" class="btn btn-danger" value="Oui">
                                    {{ form_end(delete_form) }}
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
           
</section>
{% endblock %}
