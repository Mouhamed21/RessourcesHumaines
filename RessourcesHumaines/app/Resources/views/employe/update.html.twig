{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'employe/inc/sidebar.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Administration du personnel
            <small>Gestion des Employés</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-pie-chart"></i>Administration du Personnel</a></li>
            <li>Employés</li>
            <li class="active">Modifier Employé</li>
        </ol>
    </section>
{% endblock %}
{% block body %}
<section class="content">
        <div class="container-fluid">
            <div class="text-right">
                <a href="{{ absolute_url(asset(''))  }}app_dev.php/employe" class="btn btn-primary">Retour</a>
            </div>
            <h3>MODIFIER EMPLOYE</h3>
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>

                    </div>
                </div>
                <!-- /.box-header -->
               <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="modal-title" id="myModalLabel">
                                {{ form_start(form) }}
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Nom</label>
                                    {{ form_widget(form.nom) }}
                                </div>
                                <div class="form-group">
                                    <label>Prenom</label>
                                    {{ form_widget(form.prenom) }}
                                </div>
                                <div class="form-group">
                                    <label>Sexe</label>
                                    {{ form_widget(form.sexe) }}
                                </div>
                                <div class="form-group">
                                    <label>Matricule</label>
                                    {{ form_widget(form.matricule) }}
                                </div>
                                <div class="form-group">
                                    <label>Mail</label>
                                    {{ form_widget(form.mail) }}
                                </div>
                                <div class="form-group">
                                    <label>Tél</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        {{ form_widget(form.telephone) }}
                                    </div>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label>Situation Matrimoniale</label>
                                    {{ form_widget(form.situationMatri) }}
                                </div>
                                <div class="form-group">
                                    <label>Lieu de Naissance</label>
                                    {{ form_widget(form.lieuNaissance) }}
                                </div>
                                 <div class="form-group">
                                    <label>Lieu de Travail</label>
                                    {{ form_widget(form.lieuTravail) }}
                                </div>
                                <div class="form-group">
                                    <label>Date D'embauche</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        {{ form_widget(form.dateEmbauche) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Date De Naissance</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                                {{ form_widget(form.dateNaissance) }}   
                                        </div>
                                </div>
                                <div class="form-group">
                                        <label>Curriculum vitae</label>
                                        {{ form_widget(form.cv) }}
                                </div>
                                <div class="form-group">
                                    <div class="form-group">
                                        {{ form_widget(form.save) }}
                                    </div>
                                   
                                </div>
                                
                                        {{ form_end(form) }}

                                </div>

                <!-- /.col -->

            </div>
            <!-- /.row -->
        </div>

            </div>

        </div>
</section>
{% endblock %}
