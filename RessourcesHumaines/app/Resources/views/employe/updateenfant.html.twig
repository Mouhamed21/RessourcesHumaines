{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'employe/inc/sidebar.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header" xmlns="http://www.w3.org/1999/html">
        <h1>
            Administration du personnel
            <small>Gestion des Employés</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-pie-chart"></i>Administration du Personnel</a></li>
            <li>Employés</li>
            <li class="active">Modifier Enfant</li>
        </ol>
    </section>
{% endblock %}
{% block body %}
<section class="content">
        <div class="container-fluid">
            <div class="text-right">

                <a href="{{ absolute_url(asset(''))  }}app_dev.php/employe" class="btn btn-primary">Retour</a>
                <a href="{{ path('employe')}}"><span class="glyphicon glyphicon-arrow-left -font-awesome"></span></a>

            </div>
            <h3>MODIFIER ENFANT</h3>
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>

                    </div>
                </div>
                <!-- /.box-header -->
               <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="modal-title" id="myModalLabel">
                                {{ form_start(form) }}
                            <div class="form-group">
                                <label>Nom</label>
                                {{ form_widget(form.nomEnfant) }}
                            </div>
                            <div class="form-group">
                                <label>Prenom</label>
                                {{ form_widget(form.prenomEnfant) }}

                            </div>
                            <div class="form-group">
                                <label>Naissance</label>
                                {{ form_widget(form.dateNaissance) }}

                            </div>
                            <div class="form-group">
                                <label>Sexe</label>
                                {{ form_widget(form.sexeenfant) }}

                            </div>
                            <div class="form-group">
                                <label>Adresse</label>
                                {{ form_widget(form.adresse) }}

                            </div>
                            <div class="form-group">
                                <label>Handicape</label>
                                {{ form_widget(form.handicap) }}

                            </div>
                            <div class="form-group">
                                <label>Scolariser</label>
                                {{ form_widget(form.scolariser) }}

                            </div>
                            <div class="form-group">
                                <label>N°:Carte d'identité</label>
                                {{ form_widget(form.numeroIdentification) }}

                            </div>
                            <div class="form-group">
                                <label>Conjoint</label>
                                {{ form_widget(form.conjoint) }}

                            </div>
                            <div class="form-group">
                                {{ form_widget(form.save) }}
                            </div>

                            {{ form_end(form) }}
                        </div>
                        </div>
                    </p>

                <!-- /.box-body -->
                    </div>
                </div>
                <!-- /.col -->

            </div>
            <!-- /.row -->



</section>
{% endblock %}
