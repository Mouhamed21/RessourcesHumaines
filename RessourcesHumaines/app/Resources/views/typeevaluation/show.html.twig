{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'typeevaluation/inc/header.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Paramétrage
            <small>Paramétrage Liés aux Evaluations</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-gear"></i>Paramétrage</a></li>
            <li class="active">Paramétrer Evaluation</li>
        </ol>
    </section>
{% endblock %}
{% block body %}
<section class="content">
    <div class="text-center">
        <h1>DETAILS D'UNE EVALUATION</h1>
    </div>
    <div class="text-right" xmlns="http://www.w3.org/1999/html">
        <a class="btn btn-primary" style="margin-bottom: 10px;" 
        href="{{ path('parametrage_evaluation_index') }}">Retour</a>
    </div>
     <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Détail du type évaluation {{ typeEvaluation.nomTypeEvaluation }}</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                              <th>Type Evaluation</th>
                               <th>Actions</th>
                            </tr>
                            <tr>
                                <td>{{ typeEvaluation.nomTypeEvaluation }}</td>
                                <td align="center">
                                    <a title="Modifier" class="btn btn-success btn-sm" href="{{ path('parametrage_evaluation_edit', { 'id': typeEvaluation.id }) }}">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                    <button title="Supprimer" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal{{ typeEvaluation.id}}">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="myModal{{ typeEvaluation.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">Confirmation de Suppression</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="modal-title" id="myModalLabel">Voulez-vous Supprimer {{ typeEvaluation.nomTypeEvaluation }} </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Non</button>
                                                    {{ form_start(delete_form) }}
                                                        <input type="submit" class="btn btn-danger" value="Oui">
                                                    {{ form_end(delete_form) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </td>
                                 
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
