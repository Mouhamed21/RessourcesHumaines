{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'carrieres/inc/sidebare.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Carrières et Compétences
            <small>Evaluation du Personnel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-edit"></i>Carrières et Compétences</a></li>
            <li class="active">Evaluation du Personnel</li>
        </ol>
    </section>
{% endblock %}

{% block body %}
    <h1>Contact list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomcontact</th>
                <th>Prenomcontact</th>
                <th>Sexecontact</th>
                <th>Emailcontact</th>
                <th>Telephone</th>
                <th>Employe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td><a href="{{ path('informationsdiverses_contact_show', { 'id': contact.id }) }}">{{ contact.id }}</a></td>
                <td>{{ contact.nomcontact }}</td>
                <td>{{ contact.prenomcontact }}</td>
                <td>{{ contact.sexecontact }}</td>
                <td>{{ contact.emailcontact }}</td>
                <td>{{ contact.telephone }}</td>
                 <td>{{ contact.prenom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('informationsdiverses_contact_show', { 'id': contact.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('informationsdiverses_contact_edit', { 'id': contact.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('informationsdiverses_contact_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
