              <i class="ion ion-person"></i>
        </div>
            <a href="{{path('employe')}}" class="small-box-footer">Plus D'Infos <i class="fa fa-arrow-circle-right"></i></a>
        </div>
        
    </div>
    <div class="col-lg-3 col-xs-6">
          <!-- small box -->
          <div class="small-box bg-green">
            <div class="inner">
                <h3>{% for sexe in sexes %}	
                        {{ sexe.nbre }}</h3>

                <p>	
                    {% if(sexe.nbre > 1) %}
                        {{ sexe.sexe }}s
                    {% else %}
                        {{ sexe.sexe }}
                    {% endif %}                
                    </p>
                    {% endfor %}
               
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="{{ path('statistique_employe') }}" class="small-box-footer">Plus D'Infos <i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
        <div class="col-lg-3 col-xs-6">
          <!-- small box -->
          <div class="small-box bg-yellow">
            <div class="inner">
              <h3>{% for femme in femmes %}	
                        {{ femme.nbre }}</h3>

              <p> {% if(femme.nbre > 1) %}
                        {{ femme.sexe }}s
                    {% else %}
                        {{ femme.sexe }}
                    {% endif %}        </p>
              {% endfor %}
            </div>
            <div class="icon">
              <i class="ion ion-person-add"></i>
            </div>
            <a href="{{ path('statistique_employe') }}" class="small-box-footer">Plus D'Infos<i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
        <div class="col-lg-3 col-xs-6">
          <!-- small box -->
          <div class="small-box bg-red">
            <div class="inner">
              <h3>{{nbr}}</h3>

              <p>
               {% if(nbr > 1) %}
                        Formations
                    {% else %}
                        Formation
                    {% endif %}        
              </p>
            </div>
            <div class="icon">
              <i class="ion ion-pie-graph"></i>
            </div>
            <a href="{{path('formation_index')}}" class="small-box-footer">Plus D'Infos<i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
<div class="col-md-6">
			<div class="box box-primary">
            	<div class="box-header with-border">
					<h3 class="box-title">Nombres d'Employés par Catégorie</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
					</button>
					<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
				</div>
            </div>
				<div class="box-body">
					<canvas id="Chart3" width="400" height="240"></canvas>
						<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
					<script>
					var ctx = document.getElementById('Chart3').getContext('2d');
					var chart = new Chart(ctx, {
						// The type of chart we want to create
						type: 'doughnut',

						// The data for our dataset
						
						data: {
								
							labels: [{% for categorieemploye in categorieemployes %}
								"Categorie {{ categorieemploye.nomcategorieemploye }}",
								
								{% endfor %}
								
								
								
								],
							
							datasets: [{
								label: "Catégorie Employé",
								backgroundColor: ["#008080","#FF6347","#9ACD32",,"#B0C4DE",],
											
								data: [	{% for categorieemploye in categorieemployes %}
								{{ categorieemploye.nbrem }},
								
								{% endfor %}
									
									
									],					
							}]
							
						},
						
						// Configuration options go here
						options: {
						       animation: {
                animateScale: true,
                animateRotate: true
            }

    

						}
					});
					</script>		
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="box box-success">
            	<div class="box-header with-border">
					<h3 class="box-title">Nombre d'Employé par nationalite</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
					</button>
					<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
				</div>
            </div>
				<div class="box-body">
					<canvas id="Chart4" width="400" height="240"></canvas>
						<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
					<script>
					var ctx = document.getElementById('Chart4').getContext('2d');
					var chart = new Chart(ctx, {
						// The type of chart we want to create
						type: 'pie',

						// The data for our dataset
						
						data: {
								
							labels: [{% for nationalite in nationalites %}
								"{{	nationalite.nomNationalite }}",
								
								{% endfor %}
								
								
								
								],
							
							datasets: [{
								label: "Employe",
								backgroundColor: ["#B0C4DE","#9ACD32","#008080","#B0C4DE","#FF6347"],
											
								data: [	
									{% for nationalite in nationalites %}
								{{	nationalite.nbrnat }},
								
								{% endfor %}
									],					
							}]
							
						},
						
						// Configuration options go here
						options: {
							legend: {
            display: true,
            
        },
		 title: {
            display: false,
            text: "Nombre D'Employés par Service",
			fontSize: 16
        },
						        
		animation: {
                animateScale: true,
                animateRotate: true
            }

					
    

						}
					});
					</script>		
				</div>
			</div>
		</div>
</section>




{% endblock %}
