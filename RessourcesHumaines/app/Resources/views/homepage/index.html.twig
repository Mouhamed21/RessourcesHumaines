{% block body %}

<section class="content">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        <div class="col-lg-3 col-xs-6">
          <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>{% for employe in employes %}	
                        {{employe.nbre}}</h3>
                    {% endfor %}
                    <p>{% if(nbr > 1) %}
                        Salariés
                    {% else %}
                        Salarié
                    {% endif %}</p>
                    
                </div>
