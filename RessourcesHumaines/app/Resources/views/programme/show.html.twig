{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'programme/inc/sidebare.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Formations
            <small>Elaboration du plan de Formation</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-edit"></i>Formations</a></li>
            <li class="active">Elaboration du plan de Formation</li>
        </ol>
    </section>
{% endblock %}
{% block body %}
<section class="content">
   <div  align="right" xmlns="http://www.w3.org/1999/html">
        <a class="btn btn-primary" style="margin-bottom: 10px;" 
        href="{{ path('formation_index') }}">Retourner à la liste des Formations</a>
    </div>
     <div class="row">
<div class="col-xs-12" >
            {% for success_message in app.session.flashbag.get('message7') %}
                <div class="alert alert-success alert-dismissible" style="margin-top: 10px">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-check"></i>{{ success_message }}</h4>
                </div>
            {% endfor %}
            {% for success_message in app.session.flashbag.get('message3') %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> {{ success_message }}</h4>
                </div>
            {% endfor %}
</div>
     
        <div class="col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="box-title">Détails du programme {{ programme.libelle }}</h4>
                </div>
               
                <!-- /.box-header -->
                <div class="box-body">
                        <p class="row">
                            <p class="col-lg-12 col-xs-12">
                            <p class="list-group">
                            <P class="list-group-item"><b>Libelle</b> : {{ programme.libelle }}</P>
                            <P class="list-group-item"><b>Datedebutprogramme</b> :{% if programme.datedebutprogramme %}{{ programme.datedebutprogramme|date('Y-m-d') }}{% endif %}</P>
                            <P class="list-group-item"><b>Datefinprogramme</b> :{% if programme.datefinprogramme %}{{ programme.datefinprogramme|date('Y-m-d') }}{% endif %}</P>
                            <P class="list-group-item"><b>Actions</b> : 
                            <a title="Retour à la liste des Programmes" href="{{ path('formation_show', { 'id': formation.idfor }) 
                            }}" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left"></span></a>
        
                                <a title="Modifier" href="{{ path('formation_show_edit', { 'id': programme.id }) }}" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span></a>
                        
                            <button title="Supprimer" type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal{{ programme.id }}">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>

                            </P>
                            </P>
                            </P>
                            </P>

    <div class="modal fade" id="myModal{{ programme.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Confirmation de Suppression</h4>
                                </div>
                                <div class="modal-body">
                                    <p class="modal-title" id="myModalLabel">Voulez-vous Supprimer {{ programme.libelle }} </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>
                                    {{ form_start(delete_form) }}
                                        <input type="submit" class="btn btn-danger" value="Oui">
                                    {{ form_end(delete_form) }}
                                </div>
                            </div>
                        </div>
                    </div>
</section>
{% endblock %}
