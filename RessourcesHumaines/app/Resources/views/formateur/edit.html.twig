{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'formateur/inc/header.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Paramétrage
            <small>Paramétrage Liés aux Formations</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-gear"></i>Paramétrage</a></li>
            <li class="active">Paramétrer Formations</li>
        </ol>
    </section>
{% endblock %}
{% block body %}
<section class="content">
    <div class="text-center">
        <h1>MODIFICATION D'UN FORMATEUR</h1>
    </div>
    <div align="right">
            <a class="btn btn-primary" href="{{ path('formateur_index') }}" style="margin-bottom:10px;">Retour</a>
        </div>
        {{ form_start(edit_form) }}
        <div class="form-group">
        <label>Nom</label>
            {{ form_widget(edit_form.nomformateur) }}
        </div>
         <div class="form-group">
        <label>Prenom</label>
            {{ form_widget(edit_form.prenomformateur) }}
        </div>
         <div class="form-group">
        <label>Fonction</label>
            {{ form_widget(edit_form.fonction) }}
        </div>
        <div class="form-group">
        <label>Telephone</label>
            {{ form_widget(edit_form.telephone) }}
        </div>
        <div class="form-group">
        <label>Email</label>
            {{ form_widget(edit_form.email) }}
        </div>
        <div class="form-group">
        <label>Boitepostale</label>
            {{ form_widget(edit_form.boitepostale) }}
        </div>
        <div class="form-group">
        <label>Codereference</label>
            {{ form_widget(edit_form.codereference) }}
        </div>
        <div class="form-group">
        <label>Theme Seminaire</label>
            {{ form_widget(edit_form.themeseminaire) }}
        </div>
        <div class="form-group">
        <label>Tarif Semaine</label>
            {{ form_widget(edit_form.tarifsemaine) }}
        </div>
            <input type="submit" value="Enregistrer" class="btn btn-primary" style="margin-top:10px;" />
    
        {{ form_end(edit_form) }}
</section>
{% endblock %}
