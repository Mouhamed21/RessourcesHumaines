{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'formateur/inc/header.html.twig' %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Paramétrage
            <small>Paramétrage Liés aux Formations</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-gear"></i>Paramétrage</a></li>
            <li class="active">Paramétrer Formations</li>
        </ol>
    </section>
{% endblock %}
{% block body %}
<section class="content">
<div class="text-center">
    <h1>LISTE DES FORMATEURS</h1>
</div>
<div class="text-left" style="margin-bottom:10px;">  
    <a class="btn btn-primary" href="{{ path('formateur_new') }}">Ajouter Un Formateur</a>   
  </div>
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Liste des Formateurs</h3>
    </div>
    
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example2" class="table table-bordered table-striped">
            <thead>
                <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Fonction</th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
             {% for formateur in formateurs %}
                <tr>
                    <td>{{ formateur.nomformateur }}</td>
                    <td>{{ formateur.prenomformateur }}</td>
                    <td>{{ formateur.fonction }}</td>
                    <td class="text-center">
                        
                
                                <a title="Détails" class="btn btn-primary btn-sm" href="{{ path('formateur_show', { 'id': formateur.id }) }}"><span class="glyphicon glyphicon-list"></span></a>
                        
                        
                                 <a title="Modifier" class="btn btn-success btn-sm" href="{{ path('formateur_edit', { 'id': formateur.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
    </table>
    </div>
</div>

</section>
   
{% endblock %}
